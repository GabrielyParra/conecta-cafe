@model ConectaCafe.Models.Avaliacao

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="row">
    <div class="col">
        <div class="card my-4">
            <div class="card-header p-0 position-relative mt-n4 mx-3 z-index-2">
                <div class="bg-gradient-warning shadow-dark border-radius-lg pt-4 pb-3">
                    <h5 class="text-white text-capitalize ps-3 m-0">@ViewData["Title"]</h5>
                    <h6 class="text-white text-capitalize ps-3">Excluir</h6>
                </div>
            </div>
            <div class="card-body pb-2">
                <div class="row">
                    <div class="col-lg-8 col-md-9">
                        <div class="col-12 mb-3">
                            <div class="input-group input-group-outline mb-1">
                                <label asp-for="Pessoa" class="form-label"></label>
                                <input asp-for="Pessoa" class="form-control" readonly/>
                            </div>
                        </div>
                        <div class="col-12 mb-3">
                            <div class="input-group input-group-outline mb-1">
                                <label asp-for="Texto" class="form-label"></label>
                                <textarea asp-for="Texto" class="form-control" rows="3"readonly></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8 mb-3">
                                <div class="input-group input-group-outline mb-1">
                                    <label asp-for="Nota" class="form-label"></label>
                                    <input asp-for="Nota" class="form-control"readonly>                                  
                                </div>
                            </div>
                            <div class="col-4 mb-3">
                                <div class="input-group input-group-outline mb-1">
                                    <label asp-for="DataAvaliacao" class="form-label"></label>
                                    <input asp-for="DataAvaliacao" class="form-control" readonly/>
                                </div>                             
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-3 d-flex justify-content-center">
                        <img id="Preview" src= '@(Model.Foto ?? Url.Content("~/img/indisponivel.jpg"))' class="w-75" alt="Foto">
                       
                    </div>
                    <div class="mb-3">
                       <form asp-action="Delete">
                            <h5 class="text-dark">Deseja mesmo fazer a exclus√£o deste produto?</h5>
                            <input type="hidden" asp-for="Id" />
                            <input type="submit" value="Delete" class="btn btn-danger" /> 
                            <a asp-action="Index" class="btn btn-info">Voltar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
